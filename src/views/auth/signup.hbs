<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <form class="card" action="/signup" method="POST">
        
          <h3 class="text-center my-3">SignUp</h3>
          <img
            src="/img/logo.png"
            alt="Logo IPM RUBI"
            class="card-img-top mx-auto m-2 rounded-circle w-50"
          />
        
        <div class="card-body">
          
          <label for="fullname">Write your fullname:</label>
          <input
            type="type"
            name="fullname"
            id="fullname"
            placeholder="John Doe"
            class="form-control mb-3"
            autofocus
          />

          <label for="username">Write your Username:</label>
          <input
            type="text"
            name="username"
            placeholder="johndoe123"
            class="form-control mb-3"
          />

          <label for="password">Write your password:</label>
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="form-control mb-3"
          />         

          <button class="btn btn-success btn-block">
            Register
          </button>
        </div>
      </form>

      {{! Link }}
      <p class="fs-5 text-center mt-3 text-light">Do you already have an account?
        <a href="/signin">Signin</a>
      </p>
    </div>
  </div>
</div>
