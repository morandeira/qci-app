<div class="container p-4 list table-responsive">
  <div class="row">
    {{#if parts}}
    <table class="table table-dark table-striped table-hover align-middle">
      <thead>
        <tr class="table-secondary">
          <th scope="col" class="col-md-1">#</th>
          <th scope="col" class="col-md-2">Part Number</th>
          <th scope="col" class="col-md-3">Designation</th>
          <th scope="col" class="col-md-2">Created At</th>
          <th scope="col" class="col-md-2">Modified At</th>
          <th scope="col" class="col-md-1"></th>
          <th scope="col" class="col-md-1"></th>
        </tr>
      </thead>    
    {{#each parts}}    
      <tbody>
        <tr class="table-active">
          <td>{{id}}</td>
          <td>{{np}}</td>
          <td>{{designation}}</td>
          <td>{{timeago created_at}}</td>
          <td>{{timeago modified_at}}</td>
          <td class="col">
            <a class="btn btn-danger" href="/parts/delete/{{id}}">
              Delete Part
            </a>
          </td>
          <td>
            <a class="btn btn-secondary" href="/parts/edit/{{id}}">
              Edit Part
            </a>
          </td>
        </tr>
      </tbody>
    {{/each}}
    </table>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center bg-dark text-light">
          <p>There are not Parts saved yet.</p>
          <a href="/parts/add" class="text-success">Create One!</a>
        </div>
      </div>    
    {{/if}}    
  </div>
</div>